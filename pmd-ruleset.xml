<?xml version="1.0"?>
<ruleset name="IntervalTree PMD Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        Custom PMD ruleset for IntervalTree - HPC-optimized data structure.
        Excludes rules that conflict with performance-oriented patterns.
    </description>

    <!-- Best Practices -->
    <rule ref="category/java/bestpractices.xml">
        <!-- Varargs inappropriate for internal high-frequency array methods -->
        <exclude name="UseVarargs"/>
        <!-- Guard logging conflicts with zero-allocation goals -->
        <exclude name="GuardLogStatement"/>
        <!-- Intentional for HPC: zero-copy array access for advanced users -->
        <exclude name="MethodReturnsInternalArray"/>
    </rule>

    <!-- Error Prone -->
    <rule ref="category/java/errorprone.xml">
        <!-- Known for false positives, especially with loops (priority 5) -->
        <exclude name="DataflowAnomalyAnalysis"/>
        <!-- Tree structures legitimately use null for absent children -->
        <exclude name="NullAssignment"/>
        <!-- Magic numbers acceptable in algorithm constants (e.g., 256 for sampling) -->
        <exclude name="AvoidLiteralsInIfCondition"/>
        <!-- Field/method name matching is intentional for property-style accessors -->
        <exclude name="AvoidFieldNameMatchingMethodName"/>
    </rule>

    <!-- Performance -->
    <rule ref="category/java/performance.xml"/>

</ruleset>
